{# app/Ressources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title%}MS Plateforme{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS depuis un site OKLM#}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    {% endblock %}
</head>

<body>
  <div class="container">
    <h1>SR Mosaic Selfie </h1>
    <p>
      Ce projet est fait en symfony
      et construit grace au MOOC OC
    </p>

    <p>
      <a class="btn btn-primary btn-lg" href="http://fr.openclassrooms.com/informatique/cours/developpez-votre-site-web-avec-le-framework-symfony2">
      Participer au MOOC
      </a>
    </p>
  </div>

  <div class="row">
    <div id="menu" class="col-md-3">
      <h3>Les annonces</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('ms_platform_home') }}">Accueil</a></li>
          <li><a href="{{ path('ms_platform_add') }}">Ajouter une annonce</a></li>
        </ul>

        <h4>Dernières annonces</h4>
        {{ render(controller("MSPlatformBundle:Advert:menu", {'limit': 3})) }}
      </div>
      <div id="content" class="col-md-9">
        {% block body %}

        {% endblock %}
      </div>
    </div>
    <hr>
    <footer>
      <p>The sky's the limit © {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
  </div>

    {% block javascripts %}
      <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
      <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% endblock %}

  </body>
</html>
